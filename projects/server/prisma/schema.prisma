datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

generator client {
  provider = "prisma-client-js"
  output = "../generated/client"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Category {
  id Int @id @default(autoincrement())
  title String
  ledgerItems LedgerItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LedgerItem {
  id Int @id @default(autoincrement())
  date DateTime
  description String
  cash Int @default(0)
  card Int @default(0)
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  tag String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
